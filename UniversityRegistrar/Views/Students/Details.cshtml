@{

  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Student Details</h2>
<hr />
<div class="divClass">
  <span class="left"><span class="heavy">@Html.DisplayNameFor(model => model.StudentName):</span> @Html.DisplayFor(model
    => model.StudentName)</h3></span>
  <br><br>
  <span class="left"><span class="heavy">@Html.DisplayNameFor(model => model.Year):</span> @Html.DisplayFor(model =>
    model.Year)</h3></span>
</div>
<br> <br> <br>

<h4>Course the Student belongs to:</h4>

<ul>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@join.Course.CourseName</li>
    @using (Html.BeginForm("DeleteCourse", "Students"))
    {
      @Html.Hidden("joinId", @join.CourseStudentId)
      <input type="submit" value="Delete" />
    }
  }
</ul>


<p>@Html.ActionLink("Add a Course", "AddCourse", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Student", "Edit", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId })</p>