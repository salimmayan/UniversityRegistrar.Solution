@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h4>No students have been added yet!</h4>
}

@if (@Model.Count != 0)
{
  <div class="divClass">
    <p><span class="left olive2">Student Name</span>   <span class="right olive2">ID</span></p>
    <br>
    @foreach (Student student in Model)

    {
      <span class="left">@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</span> <span
    class="right">
        @student.StudentId </span>
      <br>
    }
  </div>
}
<br>
<br>

<h3>Display student that are complete</h3>

@foreach (Student student in Model)
{
  @Html.DisplayFor(model => student.StudentName)
  <br>
  @Html.DisplayFor(model => student.StudentId)
}

<br>
<br>

<p>@Html.ActionLink("Add new student", "Create")</p>